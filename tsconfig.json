{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["dom", "es7"],

		"allowJs": false,
		"declaration": false,
		"sourceMap": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,

		"strict": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"moduleResolution": "node",
		"baseUrl": "./src",

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	}
}
